@page "/"
@page "/home"
@rendermode InteractiveServer
@using DispatchManager.Services
@using System.Data
@inject DatabaseService DatabaseService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>ROLE SELECT</PageTitle>

<div class="Home-Container">
    <h1 class="Home-Title">ROLE SELECT</h1>
    <p class="Home-Dubtitle">Please Select Your Role!</p>
    <div class="Home-Button-Container">
        <button class="driver-button" @onclick="NavigateToDriverLogin">Driver</button>
        <button class="mechanic-button" @onclick="NavigateToMechanicDashboard">Head Mechanic</button>
    </div>
</div>

@code {
  

    private void NavigateToDriverLogin()
    {
        Navigation?.NavigateTo("/driver-login");
    }

    private void NavigateToMechanicDashboard()
    {
        Navigation?.NavigateTo("/mechanic-dashboard");
    }
}
